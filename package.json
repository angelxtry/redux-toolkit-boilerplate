{
  "name": "redux-toolkit-boilerplate",
  "version": "0.1.0",
  "scripts": {
    "build": "NODE_ENV=production webpack --config webpack.config.js --env.TARGET_ENV=production",
    "staging-build": "NODE_ENV=production webpack --config webpack.config.js --env.TARGET_ENV=staging",
    "start": "NODE_ENV=development webpack-dev-server --progress --hot --env.TARGET_ENV=development",
    "check-types": "tsc",
    "lint": "eslint --ignore-path .gitignore --ext .js,.ts,.tsx .",
    "prettier": "prettier --ignore-path .gitignore \"**/*.+(js|json|jsx|ts|tsx)\"",
    "format": "yarn prettier --write",
    "check-format": "yarn prettier --list-different",
    "validate": "yarn check-types && yarn check-format && yarn lint",
    "deploy": "yarn validate && yarn build",
    "test": "yarn jest"
  },
  "keywords": [
    "react",
    "typescript",
    "webpack"
  ],
  "license": "ISC",
  "dependencies": {
    "@reduxjs/toolkit": "^1.4.0",
    "axios": "^0.21.0",
    "bootstrap": "^4.5.3",
    "lodash": "^4.17.20",
    "normalizr": "^3.6.1",
    "rc-field-form": "^1.10.1",
    "react": "^16.12.0",
    "react-app-polyfill": "^2.0.0",
    "react-bootstrap": "^1.4.0",
    "react-dom": "^16.12.0",
    "react-helmet": "^6.1.0",
    "react-redux": "^7.2.1",
    "react-router-dom": "^5.2.0",
    "react-select": "^3.1.0",
    "react-sidebar": "^3.0.2",
    "react-toastify": "^6.1.0",
    "redux-saga": "^1.1.3",
    "styled-components": "^5.2.0",
    "styled-reset": "^4.3.4",
    "typesafe-actions": "^5.1.0"
  },
  "devDependencies": {
    "@testing-library/react": "^11.2.2",
    "@types/jest": "^26.0.19",
    "@types/lodash": "^4.14.162",
    "@types/react": "^16.8.24",
    "@types/react-dom": "^16.0.5",
    "@types/react-helmet": "^6.1.0",
    "@types/react-redux": "^7.1.9",
    "@types/react-router-dom": "^5.1.5",
    "@types/react-select": "^3.0.22",
    "@types/react-sidebar": "^3.0.0",
    "@types/styled-components": "^5.1.4",
    "@types/webpack": "4.41.22",
    "@typescript-eslint/eslint-plugin": "^4.0.1",
    "@typescript-eslint/parser": "^4.0.1",
    "autoprefixer": "^9.8.6",
    "clean-webpack-plugin": "^3.0.0",
    "css-loader": "^4.2.2",
    "eslint": "^7.8.1",
    "eslint-config-airbnb": "^18.2.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-import-resolver-typescript": "^2.0.0",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-jest": "^24.1.3",
    "eslint-plugin-jsx-a11y": "^6.3.1",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-react": "^7.20.3",
    "eslint-plugin-react-hooks": "^4.0.6",
    "html-webpack-plugin": "^4.4.1",
    "husky": "^4.3.6",
    "jest": "^26.6.3",
    "prettier": "^2.0.5",
    "sass-loader": "^10.0.2",
    "style-loader": "^1.2.1",
    "ts-jest": "^26.4.4",
    "ts-loader": "^8.0.3",
    "typescript": "^4.0.3",
    "webpack": "^4.41.5",
    "webpack-cli": "^3.3.10",
    "webpack-dev-server": "^3.11.0"
  }
}
